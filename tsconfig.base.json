{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cloudinary-photos-app/components/layout": ["libs/cloudinary-photos-app/components/layout/src/index.ts"],
      "@cloudinary-photos-app/components/layout/server": ["libs/cloudinary-photos-app/components/layout/src/server.ts"],
      "@cloudinary-photos-app/global-store": ["libs/cloudinary-photos-app/global-store/src/index.ts"],
      "@nx-pnpm-monorepo/cloudinary-photos-app/components/icons": [
        "libs/cloudinary-photos-app/components/icons/src/index.ts"
      ],
      "@nx-pnpm-monorepo/cloudinary-photos-app/components/icons/server": [
        "libs/cloudinary-photos-app/components/icons/src/server.ts"
      ],
      "@nx-pnpm-monorepo/cloudinary-photos-app/components/ui": [
        "libs/cloudinary-photos-app/components/ui/src/index.ts"
      ],
      "@nx-pnpm-monorepo/cloudinary-photos-app/components/ui/server": [
        "libs/cloudinary-photos-app/components/ui/src/server.ts"
      ],
      "@nx-pnpm-monorepo/cloudinary-photos-app/types": ["libs/cloudinary-photos-app/types/src/index.ts"],
      "@nx-pnpm-monorepo/cloudinary-photos-app/utils": ["libs/cloudinary-photos-app/utils/src/index.ts"],
      "@nx-pnpm-monorepo/common": ["libs/common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
