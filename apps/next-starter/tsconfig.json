{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/next-starter/.next/types/**/*.ts",
    "../../dist/apps/next-starter/.next/types/**/*.ts",
    "next-env.d.ts",
    "../../apps/next-starter/dist/.next/types/**/*.ts",
    "../../apps/next-starter/dist/build/types/**/*.ts",
    "../../apps/next-starter/dist/dist/types/**/*.ts",
    "../../apps/next-starter/.next/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
